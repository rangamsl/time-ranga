{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">


            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    <br>
                </div>
                <div class="panel-body">
                    <table id="example2" class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th width="15%">Date</th>
                            <th width="15%">Project</th>
                            <th >Description</th>
                            <th width="30%">Time Notes</th>
                            <th width="10%">Option</th>
                            <!-- <th>Start date</th>
                            <th>Salary</th> -->
                        </tr>
                        </thead>
                        <tbody>

                        <tr style="background: #d5dae2; ">
                            <td>
                                <div class='input-group date' id='datetimepicker1'>
                                    <input type='text' class="form-control" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                     </span>
                                </div>


                            </td>
                            <td><input type="text" class="pro-name" placeholder="Project Name"></td>
                            <td><textarea name="" class="pro-dis" placeholder="Description" id="" ></textarea></td>
                            <td class="time">

                                <input type="text" class="pro-name" placeholder="Time Notes">

                            </td>



                            <td><button type="button" class="btn-simple btn btn-sm  btn-primary "><i class="fa fa-check"></i>  Submit</button></td>

                        </tr>

                        </tbody>

                        <tbody>


                        {% for post in posts %}
                            <tr>
                                <td>{{ post.time|date("d/m/y") }}</td>
                                <td>{{ post.projectid }}</td>
                                <td>{{ post.description }} </td>
                                <td class="time">

                                    <table>
                                        <tr>
                                            <td valign="top" width="80%" style="border-right: 1px #ccc solid;padding-right: 5px;">{{ post.timenotes }} </td>
                                            <td valign="top" width="20%" style="padding-left: 5px;"> {{ post.hours }} </td>
                                        </tr>
                                    </table>
                                </td>



                                <td><button type="button" class="btn-simple btn btn-xs btn-info"><i class="fa fa-user"></i></button><button type="button" class="btn-simple btn btn-xs btn-success"><i class="fa fa-edit"></i></button><button type="button" class="btn-simple btn btn-xs btn-danger"><i class="fa fa-times"></i></button></td>

                            </tr>

                        {%endfor  %}




                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>

{% endblock %}
